@model List<Article>
<section class="section posts-entry posts-entry-sm bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-uppercase text-black">Yazın son 4 Blogları</div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3">

                    <div class="blog-entry">

                        <a href="single.html" class="img-link">
                            <img src="@item.CoverImageUrl" style="height:220px; width:250; alt="Image" class="img-fluid">
                        </a>
                        <span class="date">@item.CreatedDate</span>
                        <h2><a href="single.html">@item.Title</a></h2>
                        <p>@item.Description.Substring(0, 60)</p>
                        <p><a href="/Blog/BlogDetail/@item.ArticleId" class="read-more">Devamını Oku..</a></p>

                    </div>

                </div>
            }


        </div>

    </div> 
    </div> 
</section>