@model List<Blog.EntityLayer.Category>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" /> 
<div class="container"> 
    <br /> <br /> 
    <table class="table table-bordered">
        <tr> 
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Kategoriye Ait Bloglar</th>
        </tr> 
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/EditCategory/@item.CategoryId" class="btn btn-primary">Güncelle</a></td>
                <td><a href="#" class="btn btn-dark">Kategoriye Ait Bloglar</a></td>
            </tr>
        }
    </table> 
    <a href="/Category/CreateCategory/" class="btn btn-outline-info">Yeni Kategori</a>
</div> 
