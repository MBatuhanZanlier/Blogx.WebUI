    @model List<Blog.EntityLayer.Article>
@{
    ViewData["Title"] = "MyBlogList";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Size Ait Bloglar</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
                <li class="breadcrumb-item active" aria-current="page">Yazar Blogları</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic Table</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan size ait blogları görüntüleyebilir, üzerlerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Blog Başlığı</th>
                                    <th>Tarih</th>
                                    <th>Kategori</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th> 
                                    <th>Blog Yorumları</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ArticleId</td>
                                        <td>@item.Title </td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.Category.CategoryName</td>
                                        <td><a href="/Writer/Blog/DeleteBlog/@item.ArticleId" class="btn btn-outline-warning">Sil</a></td>
                                        <td><a href="/Writer/Blog/EditBlog/@item.ArticleId" class="btn btn-outline-info">Düzenle</a></td>
                                        <td><a href="/Writer/Blog/BlogArticleComment/@item.ArticleId" class="btn btn-outline-primary">Yorumlar</a></td>
                                    </tr>
                                }
                       
                            </tbody>
                        </table> 
                        <a  href="#"    class="btn btn-info">Yeni Blog Oluştur</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

                                     