@model List<Message>
<div class="col-xl-8 col-sm-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body px-0 overflow-auto">
            <h4 class="card-title pl-4">Purchase History</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>

                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Oku</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.SenderNameSurname</td>
                                <td>@item.Subject</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Writer/Blog/DeleteMessage/@item.MessageID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Writer/Message/MessageDetaile/@item.MessageID" class="btn btn-warning">Mesajı Oku</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</div>