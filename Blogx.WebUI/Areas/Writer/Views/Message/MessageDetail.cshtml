@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">Gelen kutusu</p>
            <form action="SendMessage" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Alıcı Adı Soyadı</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="ReceiverNameSurname" readonly/>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Alıcı Mail</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" asp-for="ReceiverMail" readonly />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Konu</label>
                    <input type="text" class="form-control" id="exampleInputPassword4" asp-for="Subject" />
                </div>
       
                <div class="form-group">
                    <label for="exampleTextarea1">Mesaj</label>
                    <textarea class="form-control"
                              id="exampleTextarea1"
                              asp-for="Content" rows="7"></textarea>
                </div>
                <button  class="btn btn-primary mr-2">Gönder</button>
            </form>
        </div>
    </div>
</div>

