@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminPageLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Size Ait Mesajlar</h3>
        <nav aria-label="breadcrumb">
           
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Mesaj Listesi</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan size ait mesajları görüntüleyebilir, üzerlerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Gönderen</th>
                                    <th>Konu</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                    <th>Mesajı Oku</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.SenderNameSurname</td>
                                        <td>@item.Subject</td>
                                        <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                        <td><a href="/Writer/Blog/DeleteMessage/@item.MessageID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Writer/Message/MessageDetaile/@item.MessageID" class="btn btn-warning">Mesajı Oku</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
