@model List<Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminPageLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Ad Soyad
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Blog Başlığı
                            </th>
                            <th>
                                Sil
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td class="py-1">
                                    <img src="@item.CoverImageUrl" alt="image" />
                                </td>
                                <td>
                                    @item.AppUser.Name  @item.AppUser.Surname
                                </td>
                                <td>
                                    @item.AppUser.Email
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td><a href="/Writer/Index/@item.ArticleId" class="btn btn-outline-danger">Sil</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

