@model List<Article>
<div class="col-md-4 stretch-card grid-margin">
    <div class="card">
        <div class="card-body">
            <p class="card-title">Bloglar</p>
            <ul class="icon-data-list">
                <li>
                    @foreach (var item in Model)
                    {
                        <div class="d-flex">
                            <img src="@item.AppUser.ImageUrl" alt="user">
                            <div>
                                <p class="text-info mb-1">@item.AppUser.Name</p>
                                <p class="mb-0">@item.Title</p>
                                <small>@item.CreatedDate.ToShortDateString()</small>
                            </div>
                        </div>
                    }

                </li>
            </ul>
        </div>
    </div>
</div>
