<div class="col-md-6 grid-margin transparent">
    <div class="row">
        <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-tale">
                <div class="card-body">
                    <p class="mb-4">Toplam Mesajlar</p>
                    <p class="fs-30 mb-2">@ViewBag.messagebox</p>
                   
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-dark-blue">
                <div class="card-body">
                    <p class="mb-4">Toplam Kategori</p>
                    <p class="fs-30 mb-2">@ViewBag.categorycount</p>
              
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
            <div class="card card-light-blue">
                <div class="card-body">
                    <p class="mb-4">Toplam Bloglar</p>
                    <p class="fs-30 mb-2">@ViewBag.articleCount</p>
                   
                </div>
            </div>
        </div>
        <div class="col-md-6 stretch-card transparent">
            <div class="card card-light-danger">
                <div class="card-body">
                    <p class="mb-4">Toplam Gönderilen Mesajlar</p>
                    <p class="fs-30 mb-2">@ViewBag.sendmessage</p>
             
                </div>
            </div>
        </div>
    </div>
   
